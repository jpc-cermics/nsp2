function xdemo5()
// xfpolys 
xclear();
xset("default");
expr=['n=16;'
'rect=[-n,-n,n,n];'
'plot2d(0,0,style=[0],strf=''012'',leg=''leg'',rect=rect);	'
'xclip(''clipgrf'');'
'x=[-1 1 1 -1 -1]'';y=[-1 -1 1 1 -1]'';'
'xx=x*(n-1);yy=y*(n-1);'
'for k=2:n;  xx=[xx,x*((n-k))]; yy=[yy,y*(n-k)];end;'
'c=0:(n-1);'
'xfpolys(xx,yy,c);xclip();']
xdemo("[V]",expr);
endfunction

