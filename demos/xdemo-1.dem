//xdemo(["[IV.6] Relative line mode for drawing functions"],expr);
expr=["xset(''line mode'',0);";
      "xlfont(''-*-helvetica-bold-r-normal--*-%s0-*-*-p-*-*-1'',6);";
      "xset(''font'',6,3);";
