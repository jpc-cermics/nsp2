# I we use g77 to link we will have undefined refs. 

FLIBS=  -lfrtbegin -lg2c -lgcc -lSystem
# libs/scigtk.a 

LIBS= libs/nsp.a  \
	libs/zcalelm.a libs/zblas.a libs/graphics.a \
	libs/gd.a libs/gtksci.a libs/menusX.a 

bin/scilex: scilex-lib 
	@$(RM) $@;
	@echo "linking"; 
	$(CC)  $(FFLAGS) -o $@ src/Parse/lsci.o $(FC_LDFLAGS) \
	$(LIBS) $(TCLTK_LIBS) $(XLIBS) $(TERMCAPLIB) $(FLIBS);
