#/* -*- Mode: Makefile -*- */
RM = @RM@
AR = @AR@ @AR_FLAGS@
FILES_TO_CLEAN = @FILES_TO_CLEAN@

all::

clean::
	@echo Cleaning 
	@$(RM) $(FILES_TO_CLEAN)
distclean::
	@$(RM) $(FILES_TO_CLEAN)

RANLIB = @RANLIB@

TERMCAPLIB = @TERMCAPLIB@

##################################################################
# NOTE: the following schemes for compiling and linking are not  #
#       exactly used for the main executable scilex; for it, see #
#       the files Makefile.<host>                                #
##################################################################

############
# C compiler
# typically, for compiling use: CFLAGS = $(CC_OPTIONS)
# and for linking: $(CC) -o $(PROGRAM) $(OBJS) $(CC_LDFLAGS)
###########
CC = @CC@
CC_OPTIONS = @CC_OPTIONS@ @GTKCFLAGS@ -I$(SCIDIR)/src/include
CC_LDFLAGS = @CC_LDFLAGS@ 
CC_PICFLAGS = @CC_PICFLAGS@

# CC_OPTIONS with optimize removed if CC=gcc
CC_OPTIONS1 = @CC_OPTIONS1@ @GTKCFLAGS@ -I$(SCIDIR)/src/include
##################
# Fortran compiler
# typically, for compiling use: FFLAGS = $(FC_OPTIONS)
# and for linking: $(FC) -o $(PROGRAM) $(OBJS) $(FC_LDFLAGS)
##################
FC = @FC@
FC_OPTIONS = @FC_OPTIONS@
FC_LDFLAGS = @FC_LDFLAGS@
FC_PICFLAGS = @FC_PICFLAGS@

# FC_OPTIONS with optimize removed if FC=g77
FC_OPTIONS1 = @FC_OPTIONS1@
#
# Linker
# typically, for linking: $(LD) -o $(PROGRAM) $(OBJS) $(LD_LDFLAGS)
#
LD = @LD@
LD_LDFLAGS = @LD_LDFLAGS@
#
# DLD 
#
DLDLIB = @DLDLIB@
DLD_SUBDIR = @DLD_SUBDIR@
#
# PVM 
#
PVMLIB = @PVMLIB@
PVMGLIB = @PVMGLIB@
PVMROOT = @PVMROOT@
PVMINCLUDE = @PVMINCLUDE@
#
# TCL/TK
#
TK_INC_PATH = @TK_INC_PATH@
TCL_INC_PATH = @TCL_INC_PATH@
TCLTK_LIBS = @TCLTK_LIBS@
#
# libraries needed for linking 
# 1- inside nsp 
NSPLIBS=libs/nsp.a libs/zcalelm.a libs/graphics.a libs/gtksci.a libs/menusX.a \
	libs/rand.a libs/dcd.a libs/integ.a libs/approx.a @MPLUSLIB@ 
EXTERNLIBS = @GTKLIBS@ @FFTW3_LIBS@ @LAPACK_LIBS@ @BLAS_LIBS@  @TERMCAPLIB@
#
# for WIN32 version 
# win32 libraries for gcwin32 
#
WIN32LIBS=-mwindows -lwsock32 -lshell32 -lcomctl32  -lwinspool -lm 
WINLIBS = $(TCLTK_LIBS) $(WIN32LIBS)
LINKEROPT= $(LD_LDFLAGS)
#
# Ressource compiler 
#
RC=windres 
RCVARS=-O coff 

.c.o:
	@echo "compiling $< @ENABLE_DEBUG@"
	@$(CC) $(CFLAGS)  -c $<

.f.o:
	@echo "compiling $< @ENABLE_DEBUG@"
	@$(FC) $(FFLAGS)  -c $<

