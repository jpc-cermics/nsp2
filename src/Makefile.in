SHELL = /bin/sh

include ../Makefile.incl

SCIDIRS = zcalelm objects interp functions gtk2 \
	system graphics menus gtksci gzvt2 modules gobjects types-test \
	librand libcdf @MPLUSLIBDIR@ libinteg libapprox lapack @BLAS_LOCAL@ @LAPACK_LOCAL@ 

ALLSCIDIRS = zcalelm objects interp functions gtk2 \
	system graphics menus gtksci gzvt2 modules gobjects types-test \
	librand libcdf libmaxplus libinteg libapprox lapack \
	libblas liblapack 

# rajouter @FFTPACK@ qui est non vide si fftpack est a compiler 

SUBDIRS = $(DLD_SUBDIR) $(SCIDIRS) 
ALLSUBDIRS = $(DLD_SUBDIR) $(ALLSCIDIRS) 


all::
	@case '${MFLAGS}' in *[ik]*) set +e;; esac; \
	for i in $(SUBDIRS) ;\
	do \
		(cd $$i ; echo "making all in src/$$i..."; \
		$(MAKE) $(MFLAGS) all); \
	done

distclean::
	@case '${MFLAGS}' in *[ik]*) set +e;; esac; \
	for i in $(ALLSCIDIRS) ;\
	do \
		(cd $$i ; echo "making distclean in src/$$i..."; \
		$(MAKE) $(MFLAGS)  distclean); \
	done

clean::
	@case '${MFLAGS}' in *[ik]*) set +e;; esac; \
	for i in $(ALLSUBDIRS) ;\
	do \
		(cd $$i ; echo "making clean in src/$$i..."; \
		$(MAKE) $(MFLAGS) clean); \
	done

f2cclean::
	@case '${MFLAGS}' in *[ik]*) set +e;; esac; \
	for i in $(ALLSUBDIRS) ;\
	do \
		(cd $$i ; echo "making f2cclean in src/$$i..."; \
		$(MAKE) $(MFLAGS) f2cclean); \
	done
