static NspAgnode *nsp_gv_agfindnode(NspAgraph * g, char *name)
{
  Agnode_t *n ;
  if ((n = agfindnode(g->obj->graph,name) )== NULL)
    {
      Scierror("Error: node with name=%s was not found\n",name);
      return NULL;
    }
  return nsp_agnode_create(NVOID,n,NULL);
}

