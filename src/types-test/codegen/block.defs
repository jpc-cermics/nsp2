;; -*- scheme -*-

(define-objectref Block
  (in-module "Block")
  (parent "Graphic")
  (c-name "NspBlock")
  (implements "GRint")
  (fields
    '("nspgframe*" "frame" "hidden" ) 
    '("void*" "object_sid" "hidden")
    '("double[]" "r" "hidden" "{0,0,0,0}" "4" )   
    '("int" "color")
    '("int" "thickness")
    '("int" "background")
    '("int" "n_locks" "hidden" ) 
    '("grb_lock*" "locks" "hidden" ) 
    '("gboolean" "hilited" "std" "FALSE") 
    '("gboolean"  "show" "std" "TRUE")   
  )
  (gtype-id "Block")
)

;; just for the name, the code is overwritten 

(define-function extractelts_block
  (c-name "nsp_extractelts_block")
  (return-type "none")
)
(define-function setrowscols_block
  (c-name "nsp_setrowscols_block")
  (return-type "none")
)

;; just to give a name the code is overriden 
;; 

(define-method translate
  (of-object "Block")
  (c-name "block_translate")
  (return-type "int")
  )

(define-method set_pos
  (of-object "Block")
  (c-name "block_set_pos")
  (return-type "int")
  )

(define-method resize
  (of-object "Block")
  (c-name "block_resize")
  (return-type "int")
  )

(define-method draw
  (of-object "Block")
  (c-name "block_draw")
  (return-type "int")
  )

(define-method set_lock_pos
  (of-object "Block")
  (c-name "block_set_lock_pos")
  (return-type "int")
  )

(define-method set_locks_pos
  (of-object "Block")
  (c-name "block_set_locks_pos")
  (return-type "int")
  )
