/* compute in bounds the enclosing rectangle of box3d 
 *
 */

static void nsp_getbounds_box3d(BCG *Xgc,NspGraphic *Obj,double *bounds)
{
  bounds[0]= bounds[1] = bounds[2]= bounds[3]=0;
  return;
}

