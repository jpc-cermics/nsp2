  if (((NspPolyline3d *) self)->obj->Mcolor != NULL ) 
    nsp_matrix_destroy(((NspPolyline3d *) self)->obj->Mcolor);
  ((NspPolyline3d *) self)->obj->Mcolor= Mcolor;
  return OK;
}

