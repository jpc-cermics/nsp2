  nf = 0;
  while ( cloc != NULLCELL ) 
    {
      if ( cloc->O != NULLOBJ ) 
	{
	  NspGraphic *G= (NspGraphic *) cloc->O;
	  nsp_ogl_set_3dview(Xgc);
	  G->type->draw(Xgc,G,NULL);
	}
      cloc = cloc->next;
