include ../../Makefile.incl 

# using vte or libzvt 
#--------------------

ZTERM_LDFLAGS= `$(PKG_CONFIG) libzvt-2.0 --cflags --libs` -DHAS_I18N
zterm_CFLAGS= `$(PKG_CONFIG) libzvt-2.0 --cflags ` -DHAS_I18N
VTE_LDFLAGS= `$(PKG_CONFIG)  gtk+-2.0 vte --cflags --libs` 
vte_CFLAGS=  `$(PKG_CONFIG) gtk+-2.0 vte --cflags` 

TERM_NAME=@TERM_NAME@
LDFLAGS=$(@TERM_LDFLAGS@)
CFLAGS=$(@TERM_NAME@_FLAGS)

all	::  ../../bin/zterm 

clean :: 
	@$(RM) -f zterm gtkplug 

../../bin/zterm :  $(TERM_NAME).c 
	$(CC) -o ../../bin/zterm $(TERM_NAME).c  $(LDFLAGS) 

distclean::
	$(RM) -f ../../bin/zterm gtkplug 	



